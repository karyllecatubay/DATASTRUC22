using System;
using System.Drawing;
using System.Windows.Forms;

namespace StudentInformationForm
{
    public partial class MainForm : Form
    {
        public MainForm()
        {
            InitializeComponent();
        }

        private void InitializeComponent()
        {
            this.Text = "Student Information Form";
            this.Size = new Size(500, 700);
            this.StartPosition = FormStartPosition.CenterScreen;
            this.BackColor = Color.White;
            this.ForeColor = Color.Black;

            // Main container panel with scrolling
            Panel mainPanel = new Panel();
            mainPanel.Dock = DockStyle.Fill;
            mainPanel.AutoScroll = true;
            mainPanel.BackColor = Color.White;
            this.Controls.Add(mainPanel);

            // Title label
            Label titleLabel = new Label();
            titleLabel.Text = "Student Information Form";
            titleLabel.Font = new Font("Arial", 16, FontStyle.Bold);
            titleLabel.ForeColor = Color.Black;
            titleLabel.AutoSize = true;
            titleLabel.Location = new Point(120, 20);
            mainPanel.Controls.Add(titleLabel);

            // Create form fields
            int yPos = 70;
            int labelX = 30;
            int textBoxX = 200;
            int fieldHeight = 30;

            // ID Number
            CreateFormField(mainPanel, "ID Number:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Course
            CreateFormField(mainPanel, "Course:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Year Level
            CreateFormField(mainPanel, "Year Level:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // First Name
            CreateFormField(mainPanel, "First Name:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Middle Name
            CreateFormField(mainPanel, "Middle Name (Optional):", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Last Name
            CreateFormField(mainPanel, "Last Name:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Email Address
            CreateFormField(mainPanel, "Email Address:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Home Address
            CreateFormField(mainPanel, "Home Address:", "", labelX, ref yPos, textBoxX, fieldHeight, 60);
            yPos += 30; // Add extra space for multiline text box
            
            // Father's Name
            CreateFormField(mainPanel, "Father's Name:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Mother's Name
            CreateFormField(mainPanel, "Mother's Name:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Date of Birth
            CreateFormField(mainPanel, "Date of Birth:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Age
            CreateFormField(mainPanel, "Age:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Phone Number
            CreateFormField(mainPanel, "Phone Number:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Parent Contact Information
            CreateFormField(mainPanel, "Parent Contact Info:", "", labelX, ref yPos, textBoxX, fieldHeight);
            
            // Skills and Interest
            CreateFormField(mainPanel, "Skills and Interest:", "", labelX, ref yPos, textBoxX, fieldHeight, 60);
            yPos += 30; // Add extra space for multiline text box

            // Submit button
            Button submitButton = new Button();
            submitButton.Text = "Submit";
            submitButton.Size = new Size(100, 30);
            submitButton.Location = new Point(200, yPos);
            submitButton.ForeColor = Color.White;
            submitButton.BackColor = Color.Black;
            submitButton.FlatStyle = FlatStyle.Flat;
            submitButton.Click += new EventHandler(SubmitButton_Click);
            mainPanel.Controls.Add(submitButton);

            // Clear button
            Button clearButton = new Button();
            clearButton.Text = "Clear";
            clearButton.Size = new Size(100, 30);
            clearButton.Location = new Point(320, yPos);
            clearButton.ForeColor = Color.White;
            clearButton.BackColor = Color.Black;
            clearButton.FlatStyle = FlatStyle.Flat;
            clearButton.Click += new EventHandler(ClearButton_Click);
            mainPanel.Controls.Add(clearButton);
        }

        private void CreateFormField(Panel parent, string labelText, string defaultValue, int labelX, ref int yPos, int textBoxX, int height, int textBoxHeight = 25)
        {
            // Create label
            Label label = new Label();
            label.Text = labelText;
            label.Location = new Point(labelX, yPos);
            label.AutoSize = true;
            label.ForeColor = Color.Black;
            parent.Controls.Add(label);

            // Create text box
            TextBox textBox = new TextBox();
            textBox.Text = defaultValue;
            textBox.Size = new Size(220, textBoxHeight);
            textBox.Location = new Point(textBoxX, yPos);
            textBox.ForeColor = Color.Black;
            textBox.BorderStyle = BorderStyle.FixedSingle;
            if (textBoxHeight > 25)
            {
                textBox.Multiline = true;
                textBox.ScrollBars = ScrollBars.Vertical;
            }
            parent.Controls.Add(textBox);

            // Update vertical position for next field
            yPos += height;
        }

        private void SubmitButton_Click(object sender, EventArgs e)
        {
            MessageBox.Show("Form submitted successfully!", "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
        }

        private void ClearButton_Click(object sender, EventArgs e)
        {
            foreach (Control control in this.Controls[0].Controls)
            {
                if (control is TextBox)
                {
                    ((TextBox)control).Clear();
                }
            }
        }

        [STAThread]
        static void Main()
        {
            Application.EnableVisualStyles();
            Application.SetCompatibleTextRenderingDefault(false);
            Application.Run(new MainForm());
        }
    }
}